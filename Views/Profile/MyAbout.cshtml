@model UserViewModel
@{
    ViewData["Title"] = "MyAbout";
    Layout = "~/Views/Shared/LayoutPage.cshtml";
}


<!--Profile Top Nav-->
<vc:profile-nav></vc:profile-nav>
<!--Profile Top Nav-->


<section>
    <div class="gap gray-bg">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-12">
                    <div class="row" id="page-contents">
                        <div class="col-lg-3">

                            <aside class="sidebar static">
                                <!--Profile ayarları nav menüsü-->
                                <partial name="EditProfileNavPartialView" />
                                <!--Profile ayarları nav menüsü-->

                            </aside>
                        </div><!-- sidebar -->
                        <div class="col-lg-6">
                            <div class="central-meta">
                                <div class="about">
                                    <div class="personal">
                                        <h5 class="f-title"><i class="ti-info-alt"></i> Kişisel Bilgiler</h5>
                                        <p>@Model.UserBiography</p>
                                    </div>
                                    <div class="d-flex flex-row mt-2">
                                        <ul class="nav nav-tabs nav-tabs--vertical nav-tabs--left">
                                            <li class="nav-item">
                                                <a href="#basic" class="nav-link active" data-toggle="tab">Bilgiler</a>
                                            </li>
                                            <li class="nav-item">
                                                <a href="#work" class="nav-link" data-toggle="tab">Eğitim ve İş</a>
                                            </li>
                                            <li class="nav-item">
                                                <a href="#interest" class="nav-link" data-toggle="tab">İlgi Alanları</a>
                                            </li>
                                            <li class="nav-item">
                                                <a href="#lang" class="nav-link" data-toggle="tab">Diller</a>
                                            </li>
                                        </ul>
                                        <div class="tab-content">
                                            <div class="tab-pane fade show active" id="basic">
                                                <ul class="basics">
                                                    <li><i class="ti-user"></i>@Model.UserFirstName @Model.UserLastName</li>
                                                    <li><i class="ti-map-alt"></i>@Model.UserLocation' yaşıyor</li>
                                                    <li><i class="ti-mobile"></i>@Model.UserPhoneNumber</li>
                                                    <li><i class="ti-email"></i>@Model.UserEmail</li>
                                                    <li><i class="ti-world"></i>@Model.UserWebsite</li>
                                                </ul>
                                            </div>

                                            <div class="tab-pane fade" id="work" role="tabpanel">
                                                <div>

                                                    <p>İş bilgisi</p>
                                                    <p>@Model.UserJobInfo</p>

                                                    <p>Eğitim bilgisi</p>
                                                    <p>@Model.UserEducationInfo</p>


                                                </div>
                                            </div>
                                            <div class="tab-pane fade" id="interest" role="tabpanel">
                                                <ul class="basics">
                                                    @foreach (var intrest in Model.Interests)
                                                    {
                                                        <li>@intrest.InterestName</li>
                                                    }
                                                    
                                               
                                                </ul>
                                            </div>
                                            <div class="tab-pane fade" id="lang" role="tabpanel">
                                                <ul class="basics">
                                                    <li>@Model.UserLanguage1</li>
                                                    <li>@Model.UserLanguage2</li>
                                                    <li>@Model.UserLanguage3</li>
                                                </ul>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div><!-- centerl meta -->
                        <div class="col-lg-3">
                            <aside class="sidebar static">


                            </aside>
                        </div><!-- sidebar -->
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
