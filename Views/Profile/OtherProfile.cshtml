@model UserViewModel
@{
    ViewData["Title"] = "OtherProfile";
    Layout = "~/Views/Shared/LayoutPage.cshtml";
}


<section>
    <div class="feature-photo">
        <figure><img src=@Model.UserCoverPicture alt=""></figure>
        <div class="add-btn">
            <span>@Model.UserFollowerCount Arkadaş</span>
            <a href="#" title="" data-ripple="">Arkadaş Ekle</a>
        </div>
       
        <div class="container-fluid">
            <div class="row merged">
                <div class="col-lg-2 col-sm-3">
                    <div class="user-avatar">
                        <figure>
                            <img src=@Model.UserProfilePicture alt="">
                            
                        </figure>
                    </div>
                </div>
                <div class="col-lg-10 col-sm-9">
                    <div class="timeline-info">
                        <ul>
                            <li class="admin-name">
                                <h5>@Model.UserFirstName @Model.UserLastName</h5>
                                @* <span>Group Admin</span> *@
                            </li>
                            <li>
                                <a class="active" asp-action="OtherProfile" asp-controller="Profile" title="" asp-route-id="@Model.UserId" data-ripple="">time line</a>
                                <a class="" asp-action="OtherPhotos" asp-controller="Profile" title="" asp-route-id="@Model.UserId" data-ripple="">Photos</a>
                                <a class="" asp-action="OtherVideos" asp-controller="Profile" title="" asp-route-id="@Model.UserId" data-ripple="">Videos</a>
                                <a class="" asp-action="OtherFriends" asp-controller="Profile" title="" asp-route-id="@Model.UserId" data-ripple="">Friends</a>
                                
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

