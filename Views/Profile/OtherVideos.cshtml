@model UserViewModel
@{
    ViewData["Title"] = "OtherVideos";
    Layout = "~/Views/Shared/LayoutPage.cshtml";
}

<section>
    <div class="feature-photo">
        <figure><img src=@Model.UserCoverPicture alt=""></figure>
        <div class="add-btn">
            <span>@Model.UserFollowerCount Arkadaş</span>
            <a href="#" title="" data-ripple="">Arkadaş Ekle</a>
        </div>

        <div class="container-fluid">
            <div class="row merged">
                <div class="col-lg-2 col-sm-3">
                    <div class="user-avatar">
                        <figure>
                            <img src=@Model.UserProfilePicture alt="">

                        </figure>
                    </div>
                </div>
                <div class="col-lg-10 col-sm-9">
                    <div class="timeline-info">
                        <ul>
                            <li class="admin-name">
                                <h5>@Model.UserFirstName @Model.UserLastName</h5>
                                @* <span>Group Admin</span> *@
                            </li>
                            <li>
                                <a class="active" asp-action="OtherProfile" asp-controller="Profile" title="" asp-route-id="@Model.UserId" data-ripple="">Gönderiler</a>
                                <a class="" asp-action="OtherPhotos" asp-controller="Profile" title="" asp-route-id="@Model.UserId" data-ripple="">Fotoğraflar</a>
                                <a class="" asp-action="OtherVideos" asp-controller="Profile" title="" asp-route-id="@Model.UserId" data-ripple="">Videolar</a>
                                <a class="" asp-action="OtherFriends" asp-controller="Profile" asp-route-id="@Model.UserId" title="" data-ripple="">Arkadaşlar</a>

                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<section>
    <div class="gap gray-bg">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-12">
                    <div class="row" id="page-contents">
                        <div class="col-lg-3">
                            <aside class="sidebar static">
                                <!--ShortCuts-->
                                <partial name="ShortCutsPartialView" />
                                <!--ShortCuts-->

                            </aside>
                        </div><!-- sidebar -->
                        <div class="col-lg-6">
                            <div class="central-meta">
                                <ul class="photos">
                                    @if (Model.Posts.Where(x=>x.PostType=="Video").Count() < 1)
                                    {

                                        <h3>Hiç Vieo Paylaşılmamış..</h3>

                                    }
                                    else
                                    {


                                        @foreach (var post in Model.Posts)
                                        {
                                            if (post.PostType == "Video")
                                            {


                                                <li>
                                                    <div class="embed-responsive embed-responsive-16by9">
                                                        <video width="770" controls>
                                                            <source src="@post.PostVideoUrl" type="video/mp4">
                                                        </video>
                                                    </div>
                                                </li>
                                            }
                                           

                                        }
                                    }
                                </ul>
                                <div class="lodmore"><button class="btn-view btn-load-more"></button></div>
                            </div><!-- photos -->
                        </div><!-- centerl meta -->
                        <div class="col-lg-3">
                            <aside class="sidebar static">


                            </aside>
                        </div><!-- sidebar -->
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

